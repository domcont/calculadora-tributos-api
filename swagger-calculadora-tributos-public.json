{
  "openapi": "3.0.0",
  "info": {
    "title": "API Intermediária - Calculadora de Tributos",
    "description": "Encaminha dados para a API da Receita Federal e retorna a resposta completa.",
    "version": "1.0.0"
  },
  "paths": {
    "/calcular": {
      "post": {
        "summary": "Calcula tributos com base na API da Receita",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "valorOperacao": { "type": "number", "example": 1000.00 },
                  "ufOrigem": { "type": "string", "example": "SP" },
                  "ufDestino": { "type": "string", "example": "RJ" },
                  "codigoNCM": { "type": "string", "example": "22030000" },
                  "tipoPessoa": { "type": "string", "example": "juridica" },
                  "cnae": { "type": "string", "example": "4639199" },
                  "naturezaOperacao": { "type": "string", "example": "venda" }
                },
                "required": [
                  "valorOperacao",
                  "ufOrigem",
                  "ufDestino",
                  "codigoNCM",
                  "tipoPessoa",
                  "cnae",
                  "naturezaOperacao"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resposta completa da Receita Federal",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Conteúdo conforme resposta da API oficial da Receita Federal."
                }
              }
            }
          },
          "500": {
            "description": "Erro na comunicação com a Receita"
          }
        }
      }
    }
  }
}